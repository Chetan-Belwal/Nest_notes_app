<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>T-EXT Editor</title>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous' />
  <style>
    body {
      background-color: #f8f9fa;
    }

    .navbar {
      background-color: #4285f4;
      color: white;
      font-family: 'Roboto', sans-serif;
    }

    .navbar-brand img {
      margin-right: 10px;
    }

    .note-container,
    .display-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
      margin-top: 20px;
    }

    .note-card {
      max-width: 400px;
      width: 100%;
      background-color: #fff;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 4px 6px rgba(0, 0, 0,
          0.1);
    }

    .note-title,
    .note-text {
      width: 100%;
      border: none;
      border-bottom: 1px solid #ccc;
      resize: none;
      font-weight: bold;
      margin-bottom: 10px;
      padding: 5px 0;
    }

    .note-text {
      height: 120px;
    }

    .table {
      background-color: #ffffff;
      /* White background */
      border-radius:
        8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin-top: 20px;
      overflow:
        hidden;
    }

    .table th,
    .table td {
      text-align: center;
      padding: 15px;
      border-bottom: 1px solid #dee2e6;
    }

    .table-primary {
      background-color: #4285f4;
      color: white;
    }

    .table-info {
      background-color: #73a5f0;
      color: white;
    }

    .table-danger {
      background-color: #dc3545;
      color: white;
    }

    .note-actions button {
      margin-right: 5px;
    }

    .btn-logOut {
      margin-right: 30px;
    }

    .btn-save,
    .btn-outline-primary,
    .btn-outline-danger,
    .btn-outline-info {
      border-radius: 4px;
    }
  </style>
</head>

<body>
  <nav class='navbar navbar-dark'>
    <a class='navbar-brand' href='TextEditor.html'>
      <img src='../Images/tyrannosaurus-rex.png' width='35' height='35' class='d-inline-block align-top' alt='T-REX' />
      T-EXT Keep Notes
    </a>
    <form id="logOut" action='/auth/log_out' method='get'>
      <button class='btn btn-danger btn-logOut' form="logOut" > LogOut</button>
    </form>

  </nav>

  <div class='container mt-3'>
    <form id='noteForm' action='/notes' method='post'>
      <div class='note-container'>
        <div class='note-card'>
          <input type='text' placeholder='Title...' class='note-title' name='title' />
          <textarea placeholder='Take a Note...' class='note-text' name='content'></textarea>
          <div class='note-actions'>
            <button class='btn btn-primary btn-save'>Save :)</button>

          </div>
        </div>
      </div>
    </form>
  </div>

  <div class='container mt-5'>
    <table class='table'>
      <thead>
        <tr class='table-primary'>
          <th scope='col'>Note Id</th>
          <th scope='col'>Title</th>
          <th scope='col'>Note</th>
          <th scope='col'></th>
          <th scope='col'>Actions</th>
          <th scope='col'></th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <th scope='row' class='table-info'>{{this.id}}</th>
          <td>{{this.title}}</td>
          <td class='table-warning'>{{this.content}}</td>

          <td>
            <form action="/notes/{{this.id}}" method="get">
            <button class='btn btn-outline-primary'>Edit</button>
            </form>
          </td>
          
          <td>
            <form action="/notes/{{this.id}}" method='post' >
              <input type='hidden' name='_method' value='DELETE' />
              <button class='btn btn-outline-danger' type='submit'>Delete</button>
            </form>
          </td>
          <td>
            <button class='btn btn-outline-info'>Share</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
    crossorigin='anonymous'></script>
  <script src='TextEditor.js'></script>
</body>

</html>